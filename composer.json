{
    "name": "intervention/validation",
    "description": "Additional validation rules for the Laravel framework",
    "homepage": "https://validation.intervention.io/",
    "keywords": [
        "validation",
        "Validator",
        "laravel",
        "bic",
        "iban",
        "creditcard",
        "isbn",
        "ean",
        "gtin",
        "isin",
        "luhn",
        "base64",
        "data-url",
        "ulid"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Oliver Vogel",
            "email": "oliver@intervention.io",
            "homepage": "https://intervention.io/"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "illuminate/validation": "~10",
        "slevomat/coding-standard": "~8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1",
        "symfony/uid": "^5.1|^6.2",
        "squizlabs/php_codesniffer": "^3.8"
    },
    "autoload": {
        "psr-4": {
            "Intervention\\Validation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Intervention\\Validation\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Intervention\\Validation\\Laravel\\ValidationServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
